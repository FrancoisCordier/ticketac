<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="stylesheets/style.css" rel="stylesheet" />
    <title>Ticketac</title>
  </head>
  <body>
    <%- include("navbar.ejs") %>

    <div class="container mt-5">
      <div class="row justify-content-center text-black">
        <div class="col-md-4 m-4 fw-bold">
          <form method="post" action="/sign-in">
            <legend class="fw-bold fs-3 mb-4">Sign in</legend>
            <div class="mb-3">
              <label class="form-label"
                >E-mail</label
              >
              <input
                type="email"
                class="form-control"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label class="form-label"
                >Password</label
              >
              <input
                type="password"
                class="form-control"
                name="password"
              />
            </div>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-danger text-end">Sign in</button>
            </div>
          </form>
        </div>
        <div class="col-md-4 fw-bold m-4">
          <form method="post" action="/sign-up">
            <legend class="fs-3 mb-4">Sign up</legend>
            <% if (errors) { %>
            <div class="mb-3">
              <label class="form-label"> Last name </label>
              <input class="form-control <%= status = errors.some(el => el.param === "lastName") ? "is-invalid" : "" %>" type="text" name="lastName" value="<%= sessionForm.lastName %>"></input>
              <% if (errors.some(el => el.param === "lastName")) { %>
                <div class="invalid-feedback">
                  <%= errors.find(el => el.param === "lastName").msg %>
                </div>
                <% } %>
            </div>
            <div class="mb-3">
              <label class="form-label"> First name </label>
              <input class="form-control <%= status = errors.some(el => el.param === "firstName") ? "is-invalid" : "" %>" type="text" name="firstName" value="<%= sessionForm.firstName %>"></input>
              <% if (errors.some(el => el.param === "firstName")) { %>
                <div class="invalid-feedback">
                  <%= errors.find(el => el.param === "firstName").msg %>
                </div>
                <% } %>
            </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label"
                >E-mail</label
              >
              <input
                type="email"
                class="form-control <%= status = errors.some(el => el.param === "email") ? "is-invalid" : "" %>"
                name="email"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                value="<%= sessionForm.email %>"
              />
              <% if (errors.some(el => el.param === "email")) { %>
              <div class="invalid-feedback">
                <%= errors.find(el => el.param === "email").msg %>
              </div>
              <% } %>
             
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label"
                >Password</label
              >
              <input
                type="password"
                class="form-control <%= status = errors.some(el => el.param === "password") ? "is-invalid" : "" %>"
                name="password"
                id="exampleInputPassword1"
              />
              <% if (errors.some(el => el.param === "password")) { %>
                <div class="invalid-feedback">
                  <%= errors.find(el => el.param === "password").msg %>
                </div>
                <% } %>
            </div>
            <% } %>
            <div class="d-flex justify-content-end">
              <button type="submit" class="btn btn-danger">Sign up</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
